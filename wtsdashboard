# Django application configuration
server {
    listen 80;
    server_name wtsdealnow.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name wtsdealnow.com;

    ssl_certificate /etc/letsencrypt/live/wtsdealnow.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wtsdealnow.com/privkey.pem;
    
    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    ssl_stapling on;
    ssl_stapling_verify on;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=31536000" always;
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static/ {
        alias /var/www/whatsappsms/static/staticfiles/;
        autoindex off;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }
}

# Flask application configuration
server {
    listen 80;
    server_name whtsappdealnow.in;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name whtsappdealnow.in;

    ssl_certificate /etc/letsencrypt/live/whtsappdealnow.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/whtsappdealnow.in/privkey.pem;
    
    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    ssl_stapling on;
    ssl_stapling_verify on;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=31536000" always;
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static/ {
        alias /var/www/webhook_develop/static/;
        autoindex off;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn_flask.sock;
    }
}

# FastAPI application configuration
server {
    listen 80;
    server_name wtsdealnow.in;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name wtsdealnow.in;

    ssl_certificate /etc/letsencrypt/live/wtsdealnow.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wtsdealnow.in/privkey.pem;

    # SSL configuration
    include /etc/nginx/snippets/ssl-params.conf;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000" always;
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static/ {
        alias /var/www/fastapi_develop/static;
        autoindex off;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn_fastapi.sock;
        error_log /var/log/nginx/fastapi_error.log;
        access_log /var/log/nginx/fastapi_access.log;
    }
}

